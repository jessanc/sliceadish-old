<div class="row mb-2">
  <div class="col-md-6 mx-auto">
    <div class="card flex-md-row mb-4 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
      <h5>Your Review</h5>
      <div class="container">
        <%= form_for [@dish, Review.new] do |f| %>
          <div class="form-group">
            <div class="fs-24 review-rating"></div>
              <%= f.text_area :body, required: true, class: "form-control" %>
          </div>
          <%= f.hidden_field :dish_id, :value => @dish.id %>
          <button class="btn btn-primary">
            Submit Review
          </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $('.review-rating').raty({
    path: '/assets',
    scoreName: 'review[rating]',
    score: 1
  });
  // we add this line to prevent duplication of stars when reloading
  $('.review-rating').raty('reload');
</script>
